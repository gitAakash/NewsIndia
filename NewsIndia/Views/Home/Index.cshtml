@using BusinessClasses
@model List<BusinessClasses.SubCategoryModel>
@{
    ViewBag.Title = "News India";
}
@if (Model.Count > 0)
{
    <div class="container">
        <div class="float-width ticker">
            <h3 class="cat-label4">BREAKING NEWS</h3>
            <ul class="newsticker" style="height: 40px; overflow: hidden;">

                <li style="margin-top: -31.4486425118918px;">
                    <h4>@Model[0].Title</h4>
                </li>
                @for (var i = 1; i < Model.Count; i++)
                {
                    <li style="margin-top: 0px;">
                        <h4>@Model[i].Title</h4>
                    </li>
                }

            </ul>
            <div class="ticker-ctrls">
                <a id="tkr-prev">
                    <i class="icon-left-open-big"></i>
                </a>
                <a id="tkr-nxt">
                    <i class="icon-right-open-big"></i>
                </a>
            </div>
        </div>

        @*slider*@
        <div class="qk-slider float-width">
            <h3 class="sldr-title">slider</h3>
            <div class="flexslider news-sldr">
                <div class="flex-viewport" style="overflow: hidden; position: relative;">
                    <ul class="slides" style="-webkit-transform: translate3d(0px, 0px, 0px); -webkit-transition-duration: 2.5s; transform: translate3d(0px, 0px, 0px); transition-duration: 2.5s; width: 1600%;">
                        @foreach (var item in Model)
                        {
                        if (item.Attachments.Any(m => m.FileType == AttachmentType.Image))
                        {
                        <li style="display: block; float: left; width: 250px; width: 250px;">
                            <div class="trans2 slide-sngl">
                                <a class="text-center" href="#">
                                    <img alt="" src="@Url.Content("/AttachmentUploads/" + item.Attachments.FirstOrDefault(m=>m.FileType==AttachmentType.Image).FileName)" draggable="false">
                                </a>
                                <h4 style="text-overflow: ellipsis">
                                    <a  href="@string.Format("../Home/Details/{0}", item.SubCategoryDataId)">@Url.Content(item.Title)</a>
                                </h4>
                                <p>@Url.Content(item.Description)</p>
                                <h6>
                                    <span><i class="fa fa-clock-o"></i>20 Jan 2014</span></h6>
                            </div>
                        </li>
                        }
                        }
                    </ul>
                </div><ul class="flex-direction-nav">
                    <li>
                        <a class="flex-prev" href="#"></a>
                    </li><li>
                        <a class="flex-next" href="#"></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
}

